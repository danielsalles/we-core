{{we-title title="Usuários"}}

<div class="container-fluid">
  {{we-user-search weUserSearchSelected="weUserSearchSelected" weUserSearchClass="weUserSearch" weSearchField="email" delegate=controller addEmail="true"}}
  <small class="btn btn-primary" data-toggle="modal" data-target="#we-oauth-search">Buscar CPF</small>
</div>

<br>
{{#if user}}
<div class="table-responsive">
  <table class="table table-bordered table-hover table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>idInProvider</th>
        <th>username</th>
        <th>email</th>
        <th>active</th>
        <th>isAdmin</th>
      </tr>
    </thead>

    <tbody>
        <tr>
          <td>
          {{#link-to 'user.view' user.id}}
            {{user.id}}
          {{/link-to}}
          </td>
          <td>
          {{user.idInProvider}}
          </td>
          <td>
          {{#link-to 'user.view' user.id}}
            {{user.username}}
          {{/link-to}}
          </td>
          <td>
            {{user.email}}
          </td>
          <td>
            {{user.active}}
          </td>
          <td>
            {{user.isAdmin}}
          </td>                    
        </tr>
    </tbody>
  </table>
</div>
{{else}}
<div class="container-fluid">
  <h2 class="text-center">Selecione um usuário!</h2>
</div>
{{/if}}

{{we-oauth-search weOauthSearchSelected="weOauthSearchSelected" store=controller.store}}


