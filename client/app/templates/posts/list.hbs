<div class="context-search">
  <form  {{action "filter" on="submit"}} class="form-inline" role="form">
    <div class="form-group">
      <label for="searchString">{{t 'posts.search.string.label'}}</label>
    </div>
    <div class="form-group">
      {{input name="searchString" placeholderTranslation="posts.search.string.placeholder" classNames="form-control input-sm" value=searchString}}
    </div>

    <div class="form-group">
      {{view "select"
        name="searchSort" classNames="form-control input-sm"
        content=sortOptions
        optionValuePath="content.value"
        optionLabelPath="content.label"
        value=sort
      }}
    </div>

    <div class="form-group">
      <button class="form-control input-sm btn-info" type="submit">{{t 'posts.search.submit'}}</button>
    </div>
    <div class="form-group">
      <button {{action 'resetSearch'}} class="form-control input-sm" type="button">{{t 'posts.search.reset'}}</button>
    </div>
  </form>
</div>

<div id="posts" class="posts">
  {{#if postIsLoading}}
    <br>
    <div class="alert alert-info text-center" role="alert">
      {{t 'posts.loading'}}... <img src="/core/images/loading.gif">
    </div>
  {{else}}
    {{#each}}
      {{render 'post/teaser' this}}
    {{else}}
      {{#unless postIsLoading}}
        <br>
        <div class="alert alert-warning text-center" role="alert">
          Nenhum conte√∫do encontrado
        </div>
      {{/unless}}
    {{/each}}
  {{/if}}

</div>
{{we-timeline-loading loadingMore=loadingMore haveMore=haveMore getMore=getMore}}
