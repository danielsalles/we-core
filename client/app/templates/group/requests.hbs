<h2 class="title">Solicitações</h2>
<div class="row">
    <div>
      <table class="table table-striped table-hover table-condensed">
        <tbody>
          {{#each member in memberships}}
          <tr>
            <td class="col-md-1 text-center">
            {{we-avatar userId=member.user size="small"}}
            </td>      
            <td class="col-md-4">
            {{#link-to 'user' member.user}}{{member.displayName}}{{/link-to}}            
            </td>
            <td class="col-md-1 text-center">
              <button {{action 'denyRequest' member}} class="btn btn-sm btn-danger">{{t "groupRequest.deny"}}</button>
            </td>
            <td class="col-md-1 text-center">
              <button {{action 'acceptRequest' member}} class="btn btn-sm btn-success">{{t "groupRequest.accept"}}</button>
            </td>
          </tr>
          {{else}}
          <tr>
            <td colspan="3">
              <div class="jumbotron text-center">
                {{t "groupRequest.noRequest"}}
              </div>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>       
    </div>
</div>