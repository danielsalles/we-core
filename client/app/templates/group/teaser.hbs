<div class="group group-teaser teaser panel panel-default text-center">
  <div class="header panel-heading">
    <h4>
    {{#link-to 'group' id}}
      {{substr name max=15}}
    {{/link-to}}
    </h4>
  </div>
  <div class="content panel-body">
    {{#link-to 'group' id}}
      {{#if logo}}
        <img width="100%" {{bind-attr src="logo.urls.thumbnail"}} />
      {{else}}
        <img width="100%" src="/public/plugin/we-core/files/images/logos/group.jpg">
      {{/if}}
    {{/link-to}}
  </div>
  <div class="footer panel-footer">
    <span><i class="glyphicon glyphicon-user"></i>{{data.meta.membersCount}} {{t 'group.members'}}</span> -
    <span><i class="glyphicon glyphicon-file"></i>{{data.meta.contentsCount}} {{t 'group.contents'}}</span>
  </div>
</div>
