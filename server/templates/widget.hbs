<widget data-widget-type="{{record.type}}" model-widget="{{record.id}}" class="widget widget-{{record.type}}">
  <div class="we-region-widget-actions">
    {{t 'Widget'}}: {{record.title}} {{record.id}}:

    <button we-action="event" event="update-widget-modal" model-id="{{record.id}}" type="button" class="btn btn-default"><i class="glyphicon glyphicon-pencil"></i> {{t 'Edit'}}</button>

    <a href="" we-action="event" event="model-delete-widget" model="widget" model-id="{{record.id}}" class="btn btn-default">{{t 'Delete'}}</a>
  </div>

  <widget-header class="widget-header">
    {{#if record.title}}
      <h3><bind-html {{attrTitle}}>{{record.title}}</bind-html></h3>
    {{/if}}
  </widget-header>
  <widget-content class="widget-content">{{{widgetContent}}}</widget-content>
</widget>