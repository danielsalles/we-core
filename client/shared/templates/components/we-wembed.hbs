{{#if isEditing}}
  <div class="site-embed-editing">
    <div class="wembed-actions clearfix">
      <a class="btn btn-danger wembed-delete-link pull-right" href="#" {{action "deleteWembed"}}>
        <span class="glyphicon glyphicon-remove"> </span>
        {{t "wembed.remove"}}
      </a>
    </div>

    <div class="site-embed">

      {{#if image}}
        <div class="site-embed-image">
          {{#if showImageSelector}}
            <div {{bind-attr class=wembedImageActionClass}}>
              {{#each wembed.images}}
              <span class="text-center">
                <a href="#" {{action 'changeWembedImage' _view.contentIndex}}>{{_view.contentIndex}}</a>
              </span>
              {{/each}}
            </div>
          {{/if}}

          {{#with image}}
            <img {{bind-attr src=url}}>
          {{/with}}
        </div>
      {{/if}}

      <h5 class="site-embed-title">{{wembed.title}}</h5>
      <p class="site-embed-description">{{wembed.description}}</p>
      <div class="site-embed-domain">{{wembed.domain}}</div>
    </div>
  </div>
{{/if}}

{{#if isVideo}}
  <div class="site-embed">
  {{#if isPlaying}}
    <div class='site-embed-video-area'>
      <iframe width="560" height="315" {{bind-attr src=videoEmbedSrc}}   frameborder="0" autoplay="1" allowfullscreen></iframe>
    </div>
    <h4 class="site-embed-title">{{wembed.title}}</h4>
    <p class="site-embed-description">{{wembed.description}}</p>
    <div class="site-embed-domain">{{wembed.domain}}</div>
  {{else}}
    <a class="embed-link" {{action 'playVideo'}} {{bind-attr href=wembed.url}}>
      {{#with image}}
        <div class="site-embed-image">
          <img {{bind-attr src=url}}>
        </div>
      {{/with}}
      <h4 class="site-embed-title">{{wembed.title}}</h4>
      <p class="site-embed-description">{{wembed.description}}</p>
      <div class="site-embed-domain">{{wembed.domain}}</div>
    </a>
  {{/if}}
  </div>
{{/if}}

{{#if isPage}}
  <div class="site-embed">
    <a class="embed-link" target="_blank" {{bind-attr href=wembed.url}}>
      {{#with image}}
        <div class="site-embed-image">
          <img {{bind-attr src=url}}>
        </div>
      {{/with}}
      <h4 class="site-embed-title">{{wembed.title}}</h4>
      <p class="site-embed-description">{{wembed.description}}</p>
      <div class="site-embed-domain">{{wembed.domain}}</div>
    </a>
  </div>
{{/if}}