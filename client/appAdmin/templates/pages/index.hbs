
<table class="table">
  <thead>
    <tr>
      <th>
        ID
      </th>
      <th>
        Title
      </th>
    </tr>
  </thead>
{{#each records}}
  <tbody>
    <tr>
      <td>
        {{#link-to 'page' id}}
          {{id}} - {{title}}
        {{/link-to}}
      </td>
    </tr>
  </tbody>
{{/each}}

</table>