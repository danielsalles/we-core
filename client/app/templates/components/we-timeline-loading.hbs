<div class="loading-more-content text-center">
  {{#if loadingMore}}
    {{t 'Loading more'}}... <img src="/public/plugin/we-core/files/images/loading.gif">
  {{else}}
    {{#if haveMore}}
      <a href='#' {{action 'getMore'}}>{{t 'Get More'}}</a>
