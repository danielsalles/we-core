{
  "get /": {
    "controller": "main",
    "action": "index",
    "template"   : "home/index",
    "layoutName" : "home"
  },
  "get /api/v1/configs.json": {
    "controller": "main",
    "action": "getConfigsJS",
    "responseType"  : "json"
  },
  "get /api/v1/routes": {
    "controller": "main",
    "action": "getRoutes",
    "permission"    : true,
    "responseType": "json"
  },
  "get /admin": {
    "controller"    : "admin",
    "action"        : "index",
    "permission"    : "access_admin"
  },
  "get /admin/theme": {
    "titleHandler"  : "i18n",
    "titleI18n"     : "theme_manage",
    "name"          : "theme_manage",
    "controller"    : "admin",
    "action"        : "findThemes",
    "template"      : "admin/theme/index",
    "permission"    : "manage_theme"
  }
}