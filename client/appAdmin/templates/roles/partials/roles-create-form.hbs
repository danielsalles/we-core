<form role="form" {{action "create" on="submit"}} >
  <div class="form-group" {{bind-attr class="nameErr:has-error"}}>
    <label>{{t 'role.field.name.label'}}</label>
    {{input name="name" value=model.role.name type="text" required="true" classNames="form-control"}}
    {{#if nameErr}}
      <p class="help-block">O nome do perfil deve possuir somente letras, sem espa√ßos e sem caracteres especiais. Ex: 'owner'</p>
    {{else}}
      <p class="help-block">{{t 'role.field.name.description'}}</p>
    {{/if}}
  </div>

  <div class="form-group">
    <label>{{t 'role.field.description.label'}}</label>
    {{textarea name="description" value=model.role.description classNames="form-control" rows=6}}
    <p class="help-block">{{t 'role.field.description.description'}}</p>
  </div>

  <button type="submit" class="btn btn-primary" {{bind-attr disabled=formInvalid}}>{{t 'create'}}</button>

  {{#link-to 'roles.index' classNames="btn btn-default"}}
    {{t 'Cancel'}}
  {{/link-to}}
</form>